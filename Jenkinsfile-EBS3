pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('raghad-aws-secret-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('raghad-aws-secret-access-key')
        ARTIFACT_NAME = 'raghad-Belt2D2-artifacts-123456.war'
        AWS_S3_BUCKET = 'raghad-belt2d2-s3'
        AWS_EB_APP_NAME = 'raghad-java-app'
        AWS_EB_ENVIRONMENT = 'Raghadjavaapp-env'
        AWS_EB_APP_VERSION = "${BUILD_ID}"
    } 
    stages {
        stage('Validate') {
            steps {
                
                sh "mvn validate"

                sh "mvn clean"

            }
        }

         stage('Build') {
            steps {
                
                sh "mvn compile"

            }
        }

        stage('Test') {
            steps {
                
                sh "mvn test"

            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        stage('sonar scan'){
            steps {
                sh "mvn clean verify sonar:sonar \
                    -Dsonar.projectKey=Project-naming-convention-onsite-Raghad_alharbi-B2D2 \
                    -Dsonar.host.url=http://52.23.193.18 \
                    -Dsonar.login=sqp_cfab3c561283ea8573e66c53d89e3cae3368c83d"
            }
        }


        stage('Package') {
            steps {
                
                sh "mvn package"

            }

            post {
                success {
                    archiveArtifacts artifacts: '**/target/**.war', followSymlinks: false
                    sh 'aws configure set region us-east-1'
                    sh 'aws s3 cp ./target/**.war s3://$AWS_S3_BUCKET/$ARTIFACT_NAME'
                }
            }
        }

        stage('Deploy') {
            steps {

                sh 'aws elasticbeanstalk create-application-version --application-name $AWS_EB_APP_NAME --version-label $AWS_EB_APP_VERSION --source-bundle S3Bucket=$AWS_S3_BUCKET,S3Key=$ARTIFACT_NAME'

                sh 'aws elasticbeanstalk update-environment --application-name $AWS_EB_APP_NAME --environment-name $AWS_EB_ENVIRONMENT --version-label $AWS_EB_APP_VERSION'
            }
        }
    }
}